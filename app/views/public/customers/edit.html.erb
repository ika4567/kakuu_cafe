<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 mx-auto">

      <h2>登録内容編集</h2>
      <% if @customer.errors.any? %>
        <ul>
        <% @customer.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      <% end %>
      
      <!--<div class="">-->
      <%= form_with model: @customer, url: customers_path(@customer.id), method: :patch, local: true do |f| %>
        <div class="form-group row">
          <%= f.label "名前：", class: "col-form-label text-md-right col-md-3" %>
          <%= f.text_field :name, class:"form-control col-md-3 mb-md-2" %>
        </div>
        <div class="form-group row">
          <%= f.label "電話番号：", class: "col-form-label text-md-right col-md-3" %>
          <%= f.telephone_field :telephone_number, class:"form-control col-md-3 mb-md-2" %>
        </div>
        <div class="form-group row">
          <%= f.label "メールアドレス：", class: "col-form-label text-md-right col-md-3" %>
          <%= f.email_field :email, class:"form-control col-md-3 mb-md-2" %>
        </div>
        <div class="form-group row">
          <%= f.submit "変更する", class: "btn btn-success mr-1" %>
          <%= link_to "退会する", customers_cancel_path(current_customer), method: :patch, "data-confirm" => "再度ログインするには、新規会員登録が必要です。退会しますか？", class: "btn btn-danger mr-1" %>
        </div>
      <% end %>
      <!--</div>-->
    </div>
  </div>
</div>