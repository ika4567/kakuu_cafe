<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-4 px-5 mx-auto text-center">
      <h2>新規登録</h2>
      <p class="text-nowrap">※商品の予約には登録が必要です。</p>

      <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label "名前" %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "電話番号" %>
          <%= f.telephone_field :telephone_number, autocomplete: "telephone_number", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "メールアドレス" %>
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "パスワード（6文字以上）" %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.label "パスワード（確認用）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="form-group row">
          <%= f.submit "新規登録", class: "btn btn-success btn-block" %>
        </div>
      <% end %>

      <p>ログインは<%= render "public/shared/links" %></p>

    </div>
  </div>
</div>