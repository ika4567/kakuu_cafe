<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 mx-auto">
      <h2><%= @today %>のご予約できる商品</h2>
      <div class="d-flex row">
        <% @on_sales.each do |on_sale| %>
        <ul class="col-5">
          <li>
            <%= on_sale.product_name %>
          </li>
        </ul>
        <p class="col-2 offset-1">
          <%= number_to_currency(on_sale.price, precision: 0, format: "%u%n", unit: "￥") %>
        </p>
        <div class="col-3 offset-1"></div>
        <% end %>
      </div>
    </div>
  </div>
</div>
