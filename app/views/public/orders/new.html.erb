<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 mx-auto">
      <h2><%= @today %>のご予約できる商品</h2>
      <div class="d-flex row">
        <% @product.each do |product| %>
        <ul class="col-4">
          <li>
            <%= product.product_name %>
          </li>
        </ul>
        <p class="col-1">
          <%= number_to_currency(product.price, precision: 0, format: "%u%n", unit: "￥") %>
        </p>
        <div class="col-3 offset-1"></div>
        <%= form_with model: @order_detail, url: orders_path, local: true do |f| %>
          <%= f.hidden_field :product_id, value: product.id %>
          <%= f.select :order_quantity, *[1..2], include_blank: "0" %>個
        <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
