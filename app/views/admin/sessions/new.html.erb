<div class="container">
  <div class="row">
    <div class="col-md-6 col-lg-5 mx-auto text-center bg-white border border-warning rounded">

      <p class="h2 mt-3">管理者ログイン</p>

      <div class="p-2 mx-5 my-3">
        <%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
          <div class="form-group row">
            <%= f.label "メールアドレス" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          </div>
          <div class="form-group row">
            <%= f.label "パスワード" %><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          </div>
          <div class="form-group row">
            <%= f.submit "ログイン", class: "btn btn-lg btn-primary btn-block" %>
          </div>
        <% end %>
        <%= render "admin/shared/links" %>
      </div>
    </div>
  </div>
</div>
