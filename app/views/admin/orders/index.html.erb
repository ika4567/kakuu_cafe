<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 mx-auto">

      <h2>予約一覧</h2>
      <div class="overflow-auto">
        <table class="table">
          <thead>
            <tr>
              <th class="text-center col-1">予約日時</th>
              <th class="text-center col-2">予約者名</th>
              <th class="text-center col-2">予約商品</th>
              <th class="text-center col-1">個数</th>
              <th class="text-center col-2">予約形態</th>
              <th class="text-center col-2">来店<br>予定時刻</th>
              <th class="text-center col-2">備考</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td class="text-center">created_at</td>
              <td class="text-center">name</td>
              <td>product_name</td>
              <td class="text-center">reservation_quantity</td>
              <td class="text-center">order_system</td>
              <td class="text-center">time</td>
              <td>note</td>
            </tr>
            <% @orders.each do |order| %>
            <tr>
              <td class="text-center"><% order.created_at %></td>
              <td class="text-center"><% order.customers.name %></td>
              <td><% order.product_name %></td>
              <td class="text-center"><% order.order_details.reservation_quantity %></td>
              <td class="text-center"><% order.order_system %></td>
              <td class="text-center"><% order.time %></td>
              <td><% order.note %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    </div>
  </div>
</div>