<div class="container">
  <div class="row">
    <div class="col-lg-12 px-5 mx-auto">

      <h2>商品一覧</h2>
      <div class="form-group">
        <%= form_with model: @product, local: true do |f| %>
        <div class="form-inline">
          <%= f.label "商品名：", class:"control-label" %>
          <%= f.text_field :product_name, class:"form-control mr-3 mb-1" %>
          <%= f.label "価格：", class:"control-label" %>
          <%= f.text_field :price, class:"form-control col-md-1 mr-3 mb-1" %>
          <%= f.label "最大個数：", class:"control-label" %>
          <%= f.text_field :max_quantity, class:"form-control col-md-1 mr-3 mb-1" %>
          <%= f.submit "新規登録", class:"btn border" %>
        </div>
        <% end %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th class="col-6 text-center">商品名</th>
            <th class="col-2 text-center">価格</th>
            <th class="col-2 text-center">最大個数</th>
            <th class="col-2 text-center">販売状態</th>
          </tr>
        </thead>
        <tbody>
          <% @products.each do |product| %>
          <tr>
            <td class="col-6"><%= product.product_name %></td>
            <td class="text-center"><%= product.price %></td>
            <td class="text-center"><%= product.max_quantity %></td>
            <td class="text-center"><%= product.product_status %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
